/**index.wxss**/
.header {
  position: relative;
}
.header-input {
  padding: 0 36rpx;
  margin: 22rpx 36rpx 14rpx 36rpx;
  border: 1rpx solid #d9dde1;
  line-height: 72rpx;
  border-radius: 36rpx;
  text-align: center;
}
.header-input-placeholder {
  color: rgb(133, 133,133, 0.60);
  font-size: 26rpx;
}
.header-input-icon {
  left: 50%;
  position: absolute;
}
.navigator {
  display: flex;
  line-height: 112rpx;
  margin-bottom: 6rpx;
}
.navigator-item {
  position: relative;
  flex: 1;
  text-align: center;
  vertical-align: middle;
  font-size: 32rpx;
  color: #2b333b;
}
/* 使用flex布局图片文字对齐 */
.navigator-img {
  position: relative;
  top: 8rpx;
  width: 36rpx;
  height: 36rpx;
}
.navigator-active{
  position: absolute;
  width: 32rpx;
  height: 8rpx;
  border-radius: 4rpx;
  left: 90rpx;
  bottom: 20rpx;
}
.navigator-active-recommend {
  background-color: red;
}
.navigator-active-path {
  background-color: purple;
}
.navigator-active-project {
  background-color: #8000ff;
}
.navigator-active-activity {
  background-color: pink;
}

.swiper {
  height: 234rpx;
}
.swiper-item {
  box-sizing: border-box;
  padding: 0 6rpx;
}
/* ? */
.swiper-img {
  width: 708rpx;
  height: 234rpx;
  border-radius: 12rpx;
}
.project {
  margin-top: 32rpx;
  margin-left: 40rpx;
}
.project-title {
 font-size: 28rpx;
 color: #2b333b;
 line-height: 32rpx;
 font-weight: bold;
}
/* flex */
.project-item {
  display: flex;
  margin-top: 16rpx;
}
.project-item-pic {
  width: 208rpx;
  height: 136rpx;
  border-radius: 12rpx;
}
/* 撑开? */
.project-item-content {
  flex: 1;
  margin-left: 24rpx;
  margin-right: 40rpx;
  /* 底部间距 */
  padding-bottom: 28rpx;
  border-bottom: 1px solid #d9dde1;
  
}
.project-item-title {
  font-size: 32rpx;
  color: #2b333b;
  line-height: 40rpx;
  font-weight: bold;
}
.project-item-tags {
  margin-top: 12rpx;
  font-size: 24rpx;
  line-height: 32rpx;
}
.project-item-tags view {
  float: left;
  margin-right: 18.2rpx;
}
.project-item-price-active{
  color: #f01414;
  font-weight: bold;
}
.project-item-notice {
  background: rgb(242, 13, 13,0.1);
  border-radius: 4rpx;
  color: #f01414;
  font-size: 20rpx;
}
.project-item-text {
  color: #71777d;
}
.project-item-icon{
  position: relative;
  top: 4rpx;
  width: 32rpx;
  height: 24rpx;
}
.project-item-ueser{
  line-height: 32rpx;
  color: #71777d;
}
.project-empty {
  font-size: 24rpx;
  text-align: center;
}

.activiyt-pic{
  display: block;
  /* display: block; */
  width: 702rpx;
  height: 232rpx;
  margin: 0 auto 32rpx auto;
  border-radius: 12rpx;
}
